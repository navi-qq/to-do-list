<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:outlineAmbientShadowColor="#1D1D1D"
    android:outlineSpotShadowColor="#3C3B3B">


    <LinearLayout
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_form_dialog"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintCircleRadius="10dp">

        <TextView
            android:id="@+id/editTaskDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/taskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/saveTaskButton"
                style="@style/Widget.Material3.Button.IconButton.Outlined"
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetLeft="10dp"
                android:insetRight="10dp"
                android:text="save"
                android:textAllCaps="true"
                android:textColor="#2AD03D"
                android:textSize="12sp"
                app:strokeColor="#2AD03D" />

            <Button
                android:id="@+id/cancelTaskButton"
                style="@style/Widget.Material3.Button.IconButton.Outlined"
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaa_bold"
                android:padding="2dp"
                android:text="cancel"
                android:textAllCaps="true"
                android:textColor="#E60C0C"
                android:textSize="10sp"
                app:strokeColor="#E60C0C" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>